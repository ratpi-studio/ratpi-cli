{
  "name": "supercli",
  "description": "An all-in-one CLI tool to automate your tasks.",
  "version": "1.0.0",
  "args": [
    {
      "name": "name",
      "small": "n",
      "type": "string",
      "required": false,
      "description": "Name of the person to greet",
      "example": "Alex",
      "interactive": true
    },
    {
      "name": "age",
      "small": "a",
      "type": "number",
      "required": false,
      "description": "Age of the person",
      "example": 42,
      "interactive": false
    },
    {
      "name": "format",
      "small": "f",
      "type": "enum",
      "required": true,
      "description": "Output format",
      "values": [
        "text",
        "json",
        "csv"
      ],
      "example": "json",
      "interactive": true
    },
    {
      "name": "debug",
      "small": "d",
      "type": "boolean",
      "required": false,
      "description": "Show debug logs",
      "interactive": false
    }
  ]
}